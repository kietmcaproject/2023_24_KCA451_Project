<% layout('layouts/boilerplate') %>

    <div class="register_bg">
        <img src="/images/2.jpg" alt="">
    </div>

    <div class="col-6 offset-3">
        <form action="/register" method="POST" class="validated-form register_from" novalidate>
            <div class="mainContainer_register">

                <div class="register_headings">
                    <h3>Register</h3>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">E-mail</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="register_btn btn btn-success">Register</button>

                <p class="registers_login">Have an Account ? <a class="linkhover" href="/login">Login Here</a></p>
            </div>
        </form>
    </div>